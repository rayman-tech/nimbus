# =============================================================================
# Nimbus Environment Variables
# =============================================================================
#
# This file contains environment variables for configuring the nimbus api.
# Copy this file to .env and update with your values.
#
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================

# Environment mode: production or development
# - production: Production mode
# - development: Development mode (default)
ENVIRONMENT=development

# Application domain (required)
# Used in ingress - must be a valid RFC1035 domain name.
# Examples: nimbus.example.com, localhost
DOMAIN=nimbus.example.com

# Kubernetes storage class (required if kubernetes)
# Not required for Docker users.
NIMBUS_STORAGE_CLASS=nfs

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL hostname (required)
# In Docker Compose, use the service name (e.g., "nimbus-db")
DB_HOST=localhost

# PostgreSQL port (default: 5432)
DB_PORT=5432

# Database name (required)
DB_NAME=nimbus

# Database username (required)
DB_USER=nimbus

# Database password (required)
# Generate a secure password: openssl rand -base64 32
# Important: This must match POSTGRES_PASSWORD in .env.database
DB_PASSWORD=password
